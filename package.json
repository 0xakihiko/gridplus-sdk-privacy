{
  "name": "gridplus-sdk",
  "version": "0.0.3-dev2-unstable",
  "description": "SDK to interact with GridPlus agent devices",
  "scripts": {
    "commit": "git-cz",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src test __tests__",
    "precommit": "npm run lint:fix && npm run test",
    "prepublish": "",
    "postinstall": "npm run buildTokenList",
    "sleep": "sleep 20",
    "buildTokenList": "node support/getTokenList.js",
    "sendBTC": "node support/scripts/sendBTC.js",
    "sendETH": "node support/scripts/sendETH.js",
    "test": "mocha --timeout 30000 -R spec test/connectivity.js --recursive --exit",
    "test:lattice": "mocha --timeout 30000 -R spec test/local-agent.js --recursive --exit",
    "test:local-btc": "mocha --timeout 30000 -R spec test/local-btc.js --recursive --exit",
    "test:local-eth": "mocha --timeout 30000 -R spec test/local-eth.js --recursive --exit",
    "test:rinkeby": "mocha --timeout 60000 -R spec test/eth-rinkeby.js --recursive --exit",
    "test:bcy": "mocha --timeout 100000 -R spec test/btc-bcy.js --recursive --exit",
    "test:testnet3": "mocha --timeout 60000 -R spec test/btc-testnet3.js --recursive --exit",
    "test-docker": "npm run sleep && npm run test test:integration",
    "test:watch": "mocha -R spec test --recursive --watch",
    "test:jest": "NODE_ENV=test jest --config jest.json --verbose",
    "test:watch:jest": "NODE_ENV=test jest --config jest.json --watch --coverage --verbose",
    "test:integration": "NODE_ENV=test jest --config jest.integration.json --coverage --verbose",
    "test:integration:watch": "NODE_ENV=test jest --config jest.integration.json --watch --coverage --verbose",
    "semantic-release": "semantic-release"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/GridPlus/gridplus-sdk.git"
  },
  "dependencies": {
    "aes-js": "^3.1.1",
    "bignumber.js": "^8.0.1",
    "bitcoinjs-lib": "^4.0.1",
    "bn.js": "^4.11.8",
    "buffer": "^5.1.0",
    "crc-32": "^1.2.0",
    "debug": "^4.1.0",
    "eccrypto": "^1.0.3",
    "elliptic": "^6.4.0",
    "ethers": "GridPlus/ethers.js#master",
    "gridplus-bclient": "^0.1.2",
    "left-pad": "^1.3.0",
    "mocha": "^5.2.0",
    "semantic-release-cli": "^4.0.9",
    "sjcl": "^1.0.7",
    "superagent": "^3.8.3"
  },
  "devDependencies": {
    "commitizen": "^3.0.4",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.9.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jest": "^22.0.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "ethereumjs-tx": "^1.3.7",
    "ethereumjs-util": "^5.2.0",
    "jest": "^23.4.0",
    "meta-npm": "0.0.28",
    "mocha": "^5.2.0",
    "semantic-release": "^15.11.0"
  },
  "files": [
    "dist",
    "src",
    "support"
  ],
  "license": "ISC"
}
